{
  "name": "adeng-jenkins-cli",
  "version": "1.2.1",
  "description": "A CLI app that helps you deal with jenkins.",
  "license": "MIT",
  "homepage": "https://github.com/Bielik20/adeng-jenkins-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bielik20/adeng-jenkins-cli.git"
  },
  "engines": {
    "node": ">=8"
  },
  "preferGlobal": true,
  "bin": {
    "jenkins": "bin/jenkins"
  },
  "author": "Damian Bielecki <bielik20@gmail.com>",
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project .",
    "prepare": "npm run build"
  },
  "dependencies": {
    "ansi-escapes": "^4.1.0",
    "axios": "^0.18.0",
    "boxen": "^3.1.0",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "commander": "^2.19.0",
    "configstore": "^4.0.0",
    "figlet": "^1.2.1",
    "git-branch": "^2.0.1",
    "inquirer": "^6.2.2",
    "jenkins": "^0.25.0",
    "jenkins-jobs-runner": "^1.0.3",
    "jenkins-rxjs": "^1.1.0",
    "log-symbols": "^2.2.0",
    "minimist": "^1.2.0",
    "multi-progress": "^2.0.0",
    "rxjs": "^6.5.2",
    "update-notifier": "2.5.0"
  },
  "devDependencies": {
    "@types/configstore": "^4.0.0",
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.0.0",
    "@types/jenkins": "^0.23.1",
    "@types/minimist": "^1.2.0",
    "@types/multi-progress": "^2.0.3",
    "@types/node": "^11.12.0",
    "@types/progress": "^2.0.3",
    "@types/update-notifier": "2.5.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.4000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ],
      "*.{json,css,scss,md}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/**/*"
    ]
  }
}
